<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mx-auto">
                <form method="PUT" id="formChangeInfo">                    
                    <h3 class="mb30 text-center font-weight-bolder">Update Information</h3>
                    <!-- Username input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="username"><strong>Username</strong></label>
                        <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="Enter username">
                    </div>

                    <!-- Class ID input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="classID"><strong>Class ID</strong></label>
                        <input type="text" id="classID" name="classID" class="form-control form-control-lg" placeholder="Enter class ID">
                    </div>

                    {{!-- Faculty input --}}
                    <div class="form-outline mb-3">
                        <label class="form-label" for="khoa"><strong>Faculty</strong></label>
                        <input type="text" id="khoa" name="khoa" class="form-control form-control-lg" placeholder="Enter faculty">
                    </div>

                    <!-- Change button -->
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg px-5" id="change-btn">Change</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
