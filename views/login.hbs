<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mx-auto">
                <form>
                    <h3 class="mb30 text-center font-weight-bolder">Sinh viên</h3>
                <!-- Google Login -->
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <button type="button" class="btn btn-danger btn-floating mx-auto">
                            <i class="fa fa-google-plus me-5"></i>
                            Login with Google</button>
                    </div>
                    
                    <!-- Divider -->
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0"><strong>Or</strong></p>
                    </div>

                    <h3 class="mb30 text-center font-weight-bolder">Phòng/Khoa</h3>
                    <!-- Username input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="username"><strong>Username</strong></label>
                        <input type="text" id="username" class="form-control form-control-lg" placeholder="Enter username">
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="password"><strong>Password</strong></label>
                        <input type="password" id="password" class="form-control form-control-lg" placeholder="Enter password">
                    </div>

                    <!-- Remember me checkbox -->
                    <div class="custom-control custom-checkbox checkbox-lg">
                        <input type="checkbox" class="custom-control-input" id="rememberMe">
                        <label class="custom-control-label" for="rememberMe">Remember me</label>
                    </div>

                    <!-- Login button -->
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="button" class="btn btn-primary btn-lg px-5">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
